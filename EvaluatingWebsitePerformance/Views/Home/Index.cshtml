@{
    ViewBag.Title = "Home Page";
}
@using (Html.BeginForm("MeasureResponseTime", "Home", FormMethod.Post, new { @class = "input-url" }))
{
        <div class="form-group">
            <label for="inputUrl" class="form-label">Enter url</label>
            <input type="url" id="inputUrl" name="url" class="form-control" value="@ViewData["url"]" maxlength="1000" required>   
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
}